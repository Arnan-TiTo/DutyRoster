{
    "name": "duty-roster/codeigniter",
    "description": "Duty Roster & Event Scheduling System - CodeIgniter 4",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^8.1",
        "codeigniter4/framework": "^4.4",
        "phpoffice/phpspreadsheet": "^1.29"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Config\\": "app/Config/"
        },
        "exclude-from-classmap": [
            "**/Database/Migrations/**"
        ]
    },
    "scripts": {
        "test": "phpunit",
        "post-update-cmd": [
            "@php spark cache:clear"
        ]
    },
    "support": {
        "source": "https://github.com/your-org/duty-roster"
    }
}